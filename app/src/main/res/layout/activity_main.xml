<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".firstscreen.MainActivity">

    <TextView android:text="@string/firstScreenMessage"

        android:id="@+id/message"
        style="@style/messages_style"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sortingAlgorithmsListRecyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        />

    <ImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_below="@id/sortingAlgorithmsListRecyclerView"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/next_button"
        android:clickable="true"
        android:onClick="nextScreen"
        android:src="@drawable/ic_arrow_forward_white"
        android:tint="@color/accent" />
</RelativeLayout>
