<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/algorithm_item"
    android:layout_height="80dp"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="@color/card_view_background"

    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <TextView
            android:id="@+id/algorithm_name"
            android:textColor="@color/card_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif-thin"
            />

        <TextView
            android:id="@+id/algorithm_desciption"
            android:textColor="@color/card_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:layout_weight="0.3"
            android:fontFamily="sans-serif-thin"
            />

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/check_circle"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:src="@drawable/ic_check_circle_white"
            android:tint="@color/colorAccent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>



